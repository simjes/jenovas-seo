---
import { Image } from "astro:assets";
import heroImage from "../assets/hero.jpg";
import "@/globals.css";
---

<html lang="no" class="h-full">
	<head>
		<meta charset="utf-8" />
		<!-- TODO: favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Jenovas Vitner</title>
	</head>
	<body class="h-full">
		<section
			class="relative h-screen flex items-center justify-center overflow-hidden"
		>
			<Image
				src={heroImage}
				alt="Hero background"
				widths={[400, 800, 1200]}
				sizes="100vw"
				class="absolute top-0 left-0 w-full h-full object-cover -z-10"
			/>
			<div
				class="text-center text-white p-8 bg-black bg-opacity-50 rounded-2xl"
			>
				<h1 class="text-4xl md:text-6xl font-bold mb-4">Jenovas Vitner</h1>

				<iframe
					class="rounded-xl border-none"
					src="https://open.spotify.com/embed/show/0jxTtqiycCBwCcXGqGawoa?utm_source=generator&theme=0&t=0"
					width="100%"
					height="352"
					allowfullscreen=""
					allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
					loading="lazy"></iframe>
			</div>
		</section>
	</body>
</html>
