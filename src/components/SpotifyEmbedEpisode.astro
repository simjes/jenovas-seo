---
type Props = {
  title: string;
  id: string;
};
const { title, id } = Astro.props;
---

<div class="h-[352px] rounded-xl overflow-hidden">
  <iframe
    title={title}
    class="rounded-xl border-none"
    src={`https://open.spotify.com/embed/episode/${id}?utm_source=generator&theme=0&t=0`}
    width="100%"
    height="352"
    allowfullscreen=""
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"></iframe>
</div>
