---
import { Play, MoreHorizontal, Plus } from "lucide-astro";

interface Props {
  link: string;
  title: string;
  date?: string;
  description?: string;
  duration?: string;
  imageUrl: string;
}

const { title, date, description, duration, imageUrl, link } = Astro.props;
---

<a href={link} target="_blank" class="block max-w-2xl mx-auto">
  <div class="bg-[#121212] text-white rounded-lg overflow-hidden shadow-lg">
    <div class="flex flex-col sm:flex-row">
      <div class="sm:w-1/3 p-4">
        <!-- TODO: image component -->
        <img
          src={imageUrl}
          alt={`${title} Podcast Cover`}
          class="w-full h-auto rounded-md"
        />
      </div>
      <div class="sm:w-2/3 p-4 text-left">
        <h2 class="text-2xl font-bold mb-2">{title}</h2>
        <p class="text-gray-400 mb-2">{description}</p>
        <div
          class="bg-[#1DB954] hover:bg-[#1ed760] text-black font-bold py-2 px-6 rounded-full inline-flex items-center transition-colors duration-200"
        >
          <Play class="w-5 h-5 mr-2" />
          <span>Lytt hos Spotify</span>
        </div>
      </div>
    </div>
  </div>
</a>
