---
import { Image } from "astro:assets";
import { Play } from "lucide-astro";

interface Props {
  link: string;
  title: string;
  description?: string;
  imageUrl: string;
  loading?: "eager" | "lazy";
}

const { title, description, imageUrl, link, loading = "lazy" } = Astro.props;
---

<a href={link} target="_blank" class="block">
  <div class="bg-[#121212] text-white rounded-lg overflow-hidden shadow-lg">
    <div class="flex flex-col sm:flex-row">
      <div class="flex justify-center sm:w-1/3 p-4">
        <Image
          src={imageUrl}
          alt={`${title} Podcast Cover`}
          class="aspect-square rounded-md"
          width={450}
          height={450}
          loading={loading}
        />
      </div>
      <div class="sm:w-2/3 p-4 text-left">
        <h1 class="text-2xl font-bold mb-2">{title}</h1>
        <p class="text-gray-400 mb-2">{description}</p>
        <div
          class="bg-[#1DB954] hover:bg-[#1ed760] text-black font-bold py-2 px-6 rounded-full inline-flex items-center transition-colors duration-200"
        >
          <Play class="w-5 h-5 mr-2" />
          <span>Lytt hos Spotify</span>
        </div>
      </div>
    </div>
  </div>
</a>
