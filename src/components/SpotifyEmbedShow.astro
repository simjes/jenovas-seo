---
const SPOTIFY_OEMBED_URL = "https://open.spotify.com/oembed";
const SHOW_URL = "https://open.spotify.com/show/0jxTtqiycCBwCcXGqGawoa";

const response = await fetch(
  `${SPOTIFY_OEMBED_URL}?url=${SHOW_URL}&format=json&height=352`,
);
const data = await response.json();
---

<div class="h-[352px] rounded-xl overflow-hidden" set:html={data.html} />
